@model EmployeeTask
@{
    ViewData["Title"] = "AddTask";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}

<br />
<form method="post">
    <label>Personel</label>
    @Html.DropDownListFor(x => x.TaskAssigneeUserID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })<!--Görevin atanacağı kişi buradan seçilir
        Ama görevi takip edenv login olan kullanıcıdan controllerdan verilir
    -->
    <br />
    <label>Görev Başlığı</label>
    <input type="text" class="form-control" asp-for="Title" />
    <br />
    <label>Görev Açıklaması</label>
    <textarea cols="2" rows="5" class="form-control" asp-for="Details"></textarea>
    <br />
    <button class="btn btn-outline-info">Görevi Tanımla</button>
</form>

