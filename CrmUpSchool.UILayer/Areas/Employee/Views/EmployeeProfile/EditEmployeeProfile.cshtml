@model UserEditProfileViewModel
@{
    ViewData["Title"] = "EditUserProfile";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<form method="post" class="form-group" enctype="multipart/form-data">
    <!--resim dosya ekleme işlemlerinde bu multipart/form-data kullanılır-->

    <label>Adınız:</label>
    <input type="text" asp-for="Name" class="form-control"/>
    <br />
    <label>Soyadınız:</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <br />
    <label>Email:</label>
    <input type="email" asp-for="Email" class="form-control" required/>
    <br />
    <label>Şifre:</label>
    <input type="password" asp-for="Password" class="form-control" />
    <br />
    <label>Şifre Tekrar:</label>
    <input type="password" asp-for="ConfirmPassword" class="form-control" />
    <br />
    <label>Resim Seçin</label>
    <input type="file" asp-for="Image" class="form-control"/>
    <!--Burada resimin türüne Image veriyoruz-->
    <button class="btn btn-sucess">Kaydet</button>



</form>


